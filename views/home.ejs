    <body>
        <h1>Wordle Solver</h1>
        <section class="container-fluid">
            <div class="row py-3">
                <div class="col-lg-4">
                    <form action method="post" id="wordle_solver" autocomplete="off">
                        <dl>
                            <dt>
                                <label for="dictionary">Choose a dictionary:</label>
                            </dt>
                            <dd>
                                <select name="dict_select" id="dict_select">
                                    <option value="">
                                        --Please choose an option--
                                    </option>
                                    <option value="en" <%= formParams.dict_select === "en" ? 'selected' : '' %>>English</option>
                                    <option value="es" <%= formParams.dict_select === "es" ? 'selected' : '' %>>Espa√±ol</option>
                                </select>
                            </dd>
                        </dl>
                        <hr />
                        <dl>
                            <dt>Letters in CORRECT positions (ex: e5)</dt>
                            <dd>
                                <input
                                    type="text"
                                    name="correctPositions"
                                    id="correctpositions"
                                    size="25"
                                    value="<%= formParams.correctPositions %>"
                                    placeholder="Correct positions"
                                />
                            </dd>
                            <dt>Letters in WRONG positions (ex: t4 a3)</dt>
                            <dd>
                                <input
                                    type="text"
                                    name="wrongPositions"
                                    id="wrongpositions"
                                    size="25"
                                    value="<%= formParams.wrongPositions %>"
                                    placeholder="Wrong positions"
                                />
                            </dd>
                            <dt>Letters not found (ex: x d m)</dt>
                            <dd>
                                <input
                                    name="lettersNotFound"
                                    id="lettersnotfound"
                                    size="25"
                                    value="<%= formParams.lettersNotFound %>"
                                    placeholder="Letters not found"
                                />
                            </dd>
                        </dl>
                        <a class="btn btn-danger" href="/"
                        role="button">Reset</a>
                        <button
                            type="submit" class="btn btn-primary"
                            id="filter_words" value="Filter words"
                        >Filter words</button>
                    </form>
                </div>
                <div class="col-lg-8">
                    <p class="words">The filtered words are:</p>
                        <% words.forEach(word => { %> 
                            <%= word %> 
                        <% }) %> 
                    </p>
                    <br />
                </div>
            </div>
        </section>
